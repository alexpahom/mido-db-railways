%body
  .container
    .row
      .col-8
        %table.table.table-striped
          %thead
            %tr
              %th{ scope: 'rows' } #
              %th{ scope: 'rows' } Маршрут
              %th{ scope: 'rows' } Отправление
              %th{ scope: 'rows' } Прибытие
              %th{ scope: 'rows' } Дни курсирования

          %tbody
            - @routes.each_with_index do |row, index|
              %tr
                %th{ scope: 'row' }= index + 1
                %td
                  %a{ href: "/routes/#{row[:route_id]}/#{row[:timetable_id]}" } #{row[:departure]} - #{row[:arrival]}
                %td= int_2_time row[:departure_minutes]
                %td= int_2_time row[:arrival_minutes]
                %td= row[:days]

      .col-sm
        = haml :search_form

