%body
  .container
    .row
      .col-8
        %table.table.table-striped
          %thead
            %tr
              %th{ scope: 'rows' } #
              %th{ scope: 'rows' } Станция
              %th{ scope: 'rows' } Время в пути
              %th{ scope: 'rows' } Стоимость

          %tbody
            - @stations.each_with_index do |row, index|
              %tr
                %th{ scope: 'row' }= index + 1
                %td= row[:name]
                %td= int_2_time row[:travel_time]
                %td= row[:price]
      .col-sm
        = haml :search_form